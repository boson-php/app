{
    "name": "app",
    "arch": [
        "amd64",
        "aarch64"
    ],
    "platform": [
        "windows",
        "linux",
        "macos"
    ],
    "entrypoint": "index.php",
    "output": "./build",
    "mount": [
        "public"
    ],
    "build": {
        "directories": [
            "assets"
        ],
        "finder": [
            {
                "directory": "src",
                "name": "*.php"
            },
            {
                "directory": "vendor",
                "not-directory": "vendor/boson-php/compiler",
                "name": "*.php",
                "not-name": [
                    "*Test.php",
                    "*TestCase.php",
                    ".phpstorm.meta.php"
                ]
            }
        ]
    },
    "ini": {
        "memory_limit": "128M"
    }
}
